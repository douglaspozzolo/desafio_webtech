<% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>">
    <%= value %>
  </div>
<% end %>
<div class="row">
  <div class="col-10">
    <h1>Empregadores</h1>
  </div>
  <div class="col-2">
    <%= link_to 'Novo Empregador', new_empregador_path, class:"btn btn-desafio", style:'float:right' %>
  </div>
</div>


<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>CNPJ</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @empregadors.each do |empregador| %>
      <tr>
        <td><%= empregador.nome %></td>
        <td><%= empregador.cnpj %></td>
<!--        <td><%#= link_to 'Visualizar', empregador %></td>-->
        <td><%= link_to 'Visualizar', edit_empregador_path(empregador) %></td>
        <td><%= link_to 'Excluir', empregador, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Voltar',root_path, class:"btn btn-light" %>
